body {
  position: relative; /* For scrollyspy */
  padding-top: 50px; /* Account for fixed navbar */
}

.container a {
  text-decoration: none;
}

/* http://rvg.me/2013/11/using-bootstrap-3-with-rails-4/ */
@font-face {
  font-family: 'Glyphicons Halflings';
  src: url('<%= asset_path("glyphicons-halflings-regular.eot") %>');
  src: url('<%= asset_path("glyphicons-halflings-regular.eot?#iefix") %>') format('embedded-opentype'),
       url('<%= asset_path("glyphicons-halflings-regular.woff") %>') format('woff'),
       url('<%= asset_path("glyphicons-halflings-regular.ttf") %>') format('truetype'),
       url('<%= asset_path("glyphicons-halflings-regular.svg#glyphicons_halflingsregular") %>') format('svg');
}

#main-content {
  min-height: 450px;
}

.red {
  color: #d9534f;
}

.blue {
  color: #428bca;
}

.green {
  color: #5cb85c;
}

.orange {
  color: #f0ad4e;
}

.text-justify {
  text-align: justify;
  text-justify: inter-word;
}

#chapter-map {
  height: 400px;
  width: 100%;
  margin-bottom:4rem!important;
}

.chapter-card {
  border: 1px solid #dee2e6 !important;
  margin-bottom:3rem!important;
}

.chapter-active {
  background-image: radial-gradient(circle, rgba(125,255,173,0.1), rgba(125,255,173,0.5));
}

.chapter-inactive {
  background-image: radial-gradient(circle, rgba(255,102,102,0.1), rgba(255,102,102,0.6));
}

.chapter-zoom {
  transform: scale(1.1);
}

.chapter-fixed-content {
  position: fixed;
}

.chapter-img {
  opacity: 0.9;
}

.chapter-hover figure {
	opacity: 1;
	-webkit-transition: .3s ease-in-out;
	transition: .3s ease-in-out;
}
.chapter-hover figure:hover {
	opacity: .6;
}


/* Autocomplete JS */
.autocomplete-suggestions { border: 1px solid #999; background: #FFF; cursor: default; overflow: auto; -webkit-box-shadow: 1px 4px 3px rgba(50, 50, 50, 0.64); -moz-box-shadow: 1px 4px 3px rgba(50, 50, 50, 0.64); box-shadow: 1px 4px 3px rgba(50, 50, 50, 0.64); }
.autocomplete-suggestion { padding: 2px 5px; white-space: nowrap; overflow: hidden; }
.autocomplete-no-suggestion { padding: 2px 5px;}
.autocomplete-selected { background: #F0F0F0; }
.autocomplete-suggestions strong { font-weight: bold; color: #000; }
.autocomplete-group { padding: 2px 5px; }
.autocomplete-group strong { font-weight: bold; font-size: 16px; color: #000; display: block; border-bottom: 1px solid #000; }

.autocomplete-input input { font-size: 28px; padding: 10px; border: 1px solid #CCC; display: block; margin: 20px 0; }
